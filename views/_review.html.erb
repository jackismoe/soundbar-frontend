<%= form_for @review do |f| %>
  <%= f.label :rating %><br>
  <%= f.number_field :rating %><br>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label "Please explain your thoughts" %><br>
  <%= f.text_field :content %><br>
  <%= f.hidden_field :instrument_id, value: @instrument %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit "Post Review" %>
<% end %>